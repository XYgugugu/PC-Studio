<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CPU Cooler Gallery</title>
    <style>
        body {
            background-color: #fff; /* 白底 */
            color: #000; /* 黑字 */
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        .cooler-table {
            width: 100%;
            border-collapse: collapse;
            margin: 0 auto;
        }
        .cooler-table th, .cooler-table td {
            border: 1px solid #000;
            padding: 8px;
            text-align: left;
        }
        .cooler-table th {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
    <h1>CPU Cooler Gallery</h1>
    <table class="cooler-table">
        <thead>
            <tr>
                <th>Cooler Name</th>
                <th>Manufacturer</th>
                <th>Model</th>
                <th>Fan RPM</th>
                <th>Noise Level</th>
                <th>Height</th>
                <th>Water Cooled</th>
                <th>Fanless</th>
            </tr>
        </thead>
        <tbody>
            <% coolers.forEach(cooler => { %>
            <tr>
                <td><%= cooler.Cooler_Name %></td>
                <td><%= cooler.Manufacturer %></td>
                <td><%= cooler.Model %></td>
                <td><%= cooler.Fan_RPM %></td>
                <td><%= cooler.Noise_Level %></td>
                <td><%= cooler.Height ? cooler.Height + ' mm' : 'N/A' %></td>
                <td><%= cooler.Water_Cooled ? 'Yes' : 'No' %></td>
                <td><%= cooler.Fanless ? 'Yes' : 'No' %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>